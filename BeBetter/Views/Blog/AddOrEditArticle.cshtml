@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BeBetter.Models.ArticleModel
<div class="container">
    <div class="row">
        <div class="box">
            @using (Html.BeginForm("Add", "Blog", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="col-lg-3">
                </div>

                <div class="col-lg-6 text-center">
                    <row>
                        @Html.LabelFor(m => m.Title)
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </row>
                    <row>
                        <br>@Html.LabelFor(m => m.Body)
                        @Html.TextAreaFor(m => m.Body, 20,1, new { @class = "form-control" })
                    </row>
                    <row>
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </row>
                </div>
                <div class="col-lg-3">
                   
                  
                </div>
            }
        </div>
    </div>
</div>
