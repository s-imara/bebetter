@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<BeBetter.Models.ArticleModel>
<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-10">
                <h2 class="intro-text text-center"></h2>
            </div>
            <div class="col-lg-2">
                <button class="btn btn-default btn-lg" onclick="location.href=' @Url.Action("AddOrEditArticle", "Blog")'">Add new article</button>
            </div>
            @if (!Model.Any())
            {
                <div class="col-lg-12 text-center">
                    Нет статей
                    </div>
                    }
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-12 text-center">
                            <img alt="" src="img/slide-2.jpg" class="img-responsive img-border img-full">
                            <h2>
                                @Html.DisplayFor(model => item.Title)
                                <br>
                                <small>October 13, 2013</small>
                            </h2>
                            <col-lg-12>
                                @Html.DisplayFor(model => item.Body)
                            </col-lg-12>
                            <div class="col-lg-12 text-center">
                                <button class="btn btn-default btn-lg" onclick="location.href=' @Url.Action("Add", "Blog")'">Read More</button>
                                </div class="col-lg-12 text-center">
                                    <hr>
                                </div>
                    }
                    <div class="col-lg-12 text-center">
                        <ul class="pager">
                            <li class="previous">
                                <a href="#">← Older</a>
                            </li>
                            <li class="next">
                                <a href="#">Newer →</a>
                            </li>
                        </ul>
                    </div>
                </div>
    </div>
</div>